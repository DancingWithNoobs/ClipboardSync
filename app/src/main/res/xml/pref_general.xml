<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
            android:key="server_ip"
            android:title="Server IP address"
            android:defaultValue="@string/server_ip_default"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1"/>
    <EditTextPreference
            android:key="server_port"
            android:title="Server port"
            android:defaultValue="@string/server_port_default"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Preference android:title="@string/clear_database"
                android:key="clear_database"/>

</PreferenceScreen>
